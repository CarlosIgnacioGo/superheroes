<!DOCTYPE html>
<html>
<head>
  <title>Superheroes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:notice] %>
	<h2><%= flash[:notice] %></h2>
<% elsif %>
	<h2><%= flash[:alert] %></h2>
<% end %>
<%= yield %>
</body>
</html>
